                   promptText="Введите название товара"/>
        <TextField fx:id="barCodeField" layoutX="279.0" layoutY="62.0" onKeyTyped="#handleKeyTyped" prefHeight="25.0"
                   prefWidth="265.0" promptText="Введите штрих-код"/>
        <TextField fx:id="quantityField" layoutX="5.0" layoutY="108.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите количество"/>
        <TextField fx:id="modelField" layoutX="279.0" layoutY="108.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите модель"/>
        <TextField fx:id="sortField" layoutX="5.0" layoutY="155.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите сорт"/>
        <TextField fx:id="colorField" layoutX="279.0" layoutY="155.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите цвет"/>
        <TextField fx:id="sizeField" layoutX="5.0" layoutY="201.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите размер"/>
        <TextField fx:id="weightField" layoutX="279.0" layoutY="201.0" prefHeight="25.0" prefWidth="265.0"
                   promptText="Введите вес"/>
