<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane prefHeight="301.0" prefWidth="557.0" xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.testtaskhtc.AddViewController">
    <children>
        <TextField fx:id="idPriceField" layoutX="6.0" layoutY="14.0" prefHeight="25.0" prefWidth="265.0"
