   <children>
      <TextField fx:id="idPriceField" layoutX="6.0" layoutY="14.0" prefHeight="25.0" prefWidth="190.0" promptText="Введите Id цены" />
      <TextField fx:id="codeField" layoutX="6.0" layoutY="54.0" prefHeight="25.0" prefWidth="190.0" promptText="Введите код" />
      <TextField fx:id="nameField" layoutX="6.0" layoutY="95.0" prefHeight="25.0" prefWidth="190.0" promptText="Введите название товара" />
      <TextField fx:id="barCodeField" layoutX="6.0" layoutY="135.0" onKeyTyped="#handleKeyTyped" prefHeight="25.0" prefWidth="190.0" promptText="Введите штрих-код" />
