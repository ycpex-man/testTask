                prefHeight="25.0" prefWidth="162.0" text="Добавить товар"/>
        <Label fx:id="idLabel" layoutX="6.0" layoutY="39.0" prefHeight="17.0" prefWidth="265.0" textFill="#ff2600"/>
        <Label fx:id="codeLabel" layoutX="279.0" layoutY="39.0" prefHeight="17.0" prefWidth="265.0" textFill="#ff2600"/>
        <Label fx:id="nameLabel" layoutX="6.0" layoutY="87.0" prefHeight="17.0" prefWidth="265.0" textFill="#ff2600"/>
        <Label fx:id="barCodeLabel" layoutX="279.0" layoutY="87.0" prefHeight="17.0" prefWidth="265.0"
               textFill="#ff2600"/>
        <Label fx:id="quantityLabel" layoutX="6.0" layoutY="133.0" prefHeight="17.0" prefWidth="265.0"
               textFill="#ff2600"/>
        <Label fx:id="modelLabel" layoutX="279.0" layoutY="133.0" prefHeight="17.0" prefWidth="265.0"
               textFill="#ff2600"/>
        <Label fx:id="sortLabel" layoutX="6.0" layoutY="180.0" prefHeight="17.0" prefWidth="265.0" textFill="#ff2600"/>
        <Label fx:id="colorLabel" layoutX="279.0" layoutY="180.0" prefHeight="17.0" prefWidth="265.0"
               textFill="#ff2600"/>
        <Label fx:id="sizeLabel" layoutX="6.0" layoutY="226.0" prefHeight="17.0" prefWidth="265.0" textFill="#ff2600"/>
        <Label fx:id="weightLabel" layoutX="279.0" layoutY="226.0" prefHeight="17.0" prefWidth="265.0"
               textFill="#ff2600"/>
    </children>
</AnchorPane>
