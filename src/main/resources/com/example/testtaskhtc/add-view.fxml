      <Button fx:id="addBtn" layoutX="19.0" layoutY="423.0" mnemonicParsing="false" onAction="#onAddButtonClick" prefHeight="25.0" prefWidth="162.0" text="Добавить товар" />
   </children>
</AnchorPane>
